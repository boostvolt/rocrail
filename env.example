# RocRail Docker Server Configuration
# Copy this file to .env and modify as needed

# RocRail version to use (check https://wiki.rocrail.net for latest)
ROCRAIL_VERSION=5854

# Timezone (important for logging and scheduling)
TZ=Europe/Berlin

# Architecture Settings
# For ARM64 systems: PLATFORM=linux/arm64
# For x86_64 systems: PLATFORM=linux/amd64 (default)
PLATFORM=linux/amd64

# Port Configuration (optional - defaults shown)
SRCP_PORT=4303
ROCRAIL_PORT=8051
ROCWEB_PORT=8088
SNMP_PORT=161

# Resource limits (optional - defaults shown)
DOCKER_MEMORY_LIMIT=1G
DOCKER_CPU_LIMIT=1.0

# Optional: Security settings
# ROCRAIL_PASSWORD=your_secure_password
# ALLOW_REMOTE_ACCESS=true

# Optional: Network settings
# ROCRAIL_NETWORK_SUBNET=172.20.0.0/16 jus